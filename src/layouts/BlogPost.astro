---
import type { BlogPost } from '../content/config';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import ReleaseLinks from '../components/ReleaseLinks.astro';
import DiscussionLinks from '../components/DiscussionLinks.astro';

type Props = BlogPost;

const data = Astro.props;
const { zammVersion, title, description, pubDate, updatedDate, heroImage } = data;
const fullTitle = `v${zammVersion} - ${title}`;
const postHistoryUrl = `https://github.com/zamm-dev/website/commits/main/src/content/blog/v${zammVersion}.mdx`;
---

<html lang="en">
	<head>
		<BaseHead title={fullTitle} description={description} image={heroImage} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: fit-content;
				margin: 0 auto;
			}
			.hero-image img {
				display: block;
				max-height: 500px;
				max-width: 950px;
				width: auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: 100%;
				margin: auto;
				color: rgb(var(--gray-dark));
				text-align: justify;
			}
			@media (min-width: 720px) {
				.prose {
					padding: 1em;
					max-width: calc(100% - 2em);
				}
			}
			.prose :global(.signature) {
				margin-left: auto;
				text-align: right;
			}
			.prose :global(.signature p) {
				margin: 0;
			}
			.title {
				max-width: 1020px;
				margin: 3em auto 1em;
				padding: 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				text-align: center;
			}
			.title h1 .version {
				font-size: 0.8em;
				color: rgb(var(--gray));
			}
			.dates {
				margin: 0 auto 0.5em;
				color: rgb(var(--gray));
				width: fit-content;
			}
			.dates td {
				text-align: right;
				padding: 0 0.25rem;
			}
			.dates td.date {
				text-align: left;
			}
			.dates a {
				color: rgb(var(--gray));
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="title">
					<h1><span class="version">v{zammVersion}: </span>{title}</h1>
					<table class="dates">
						<tr>
							<td>Published</td>
							<td class="date"><FormattedDate date={pubDate} /></td>
						</tr>
						{
							updatedDate && (
								<tr>
									<td><a href={postHistoryUrl}>Last update</a></td>
									<td class="date"><FormattedDate date={updatedDate} /></td>
								</tr>
							)
						}
					</table>
				</div>
				<div class="prose">
					<ReleaseLinks release={data} />
					<DiscussionLinks {...data.discussions} />
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
